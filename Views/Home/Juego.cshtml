@{
    ViewBag.Title = "Juego";
}
<div class="juego-container">
    <h2>Bienvenido, @ViewBag.Username</h2>
    <h4>Â¡Adivina la palabra!</h4>
    <div id="palabra" class="palabra-grande">
        @for (int i = 0; i < ViewBag.Palabra.Texto.Length; i++)
        {
            <p class="letra oculto">_</p>
        }
    </div>
    <form action='@Url.Action("FinJuego", "Home")' id="formJuego" autocomplete="off">
        <input type="hidden" id="palabraReal" value="@ViewBag.Palabra.Texto" />
        <input type="hidden" id="intentos" name="intentos" value="@ViewBag.Intentos" />
        <input type="text" id="inputLetraPalabra" class="form-control d-inline-block w-auto" placeholder="Letra o palabra" required />
        <button type="button" class="btn btn-success" id="btnArriesgarLetra" onclick="EscribirNumero(0)">Arriesgar Letra</button>
        <button type="button" class="btn btn-info" id="btnArriesgarPalabra" onclick="EscribirNumero(0)">Arriesgar Palabra</button>
    </form>
    <div class="mt-4">
        <strong>Letras arriesgadas:</strong>
        <p id="letrasArriesgadas"></p>
    </div>
</div>
<script src="~/js/juego.js"></script>